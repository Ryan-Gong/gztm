/*使屏幕变暗 */
.shade{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.fixed-center{
      position:fixed;
      left:50%;
      top:50%;
      transform:translate(-50%,-50%);
      z-index:1000;      
}
.fixed-bottom{
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  background: #07cc60;
  z-index: 1000;
  box-sizing: border-box;
}