/*使屏幕变暗 */
.shade{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*弹出层 */
.pop {
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background:#ffffff;
  padding: 24rpx 24rpx 0rpx 24rpx;
}
.pop-title{
  display: flex;
  flex-direction: row;
  justify-content:space-between;/**左右两端**/
  padding-bottom: 24rpx;
}
.pop-hd{
  padding-bottom: 20rpx;
}
.pop-bd{
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  background:#ffffff;
}
.fixed-center{
      position:fixed;
      left:50%;
      top:50%;
      transform:translate(-50%,-50%);
      z-index:1000;      
}
.fixed-bottom{
  position: fixed;
  width: 100%;
  bottom: 10rpx;
  /**background: #07cc60;**/
  z-index: 1000;
  box-sizing: border-box;
}
.btn{
  box-sizing: border-box;
}