/* miniprogram/pages/sites/show/show.wxss */

.section_search{
  display: flex;
  background: #fff;
  width: 100%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
  padding: 3px 0px;
}
/**搜索 icon **/
.searchcion {
  margin: 10rpx 10rpx 10rpx 5rpx;
  position: absolute;
  left:28rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
.search_arr input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
  width: 200px;
  font-size: 12px;
}
.cancel{
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  padding: 3px 0px;
}
.section_show{
  padding:10px 20px 10px 20px;
  margin: 0px;
  display: flex;
  width: 100%;
  background-color: #fff;
  border: 1px solid #f30a0a;
}