page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  height: 100%; 
  padding: 0;
  /** background-color: #f2f2f2;**/
}
/**搜索框**/
.section_search{
  display: flex;
  flex-direction: row;/**容器内元素的排列方向(默认横向排列)**/
  margin: 0rpx 0rpx 20rpx 0rpx ;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.row{
  display: flex;
  width: 100%; box-sizing:border-box;
}
.full{
  width: 100%; box-sizing:border-box;
}
.search_arr {
  position:relative;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
  display: flex;flex-direction:row;
}
.search_icon {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:4rpx;
  top:4rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
.search_arr input{
  margin-left: 65rpx;
  border-radius: 5px;
  width: 200px;
  padding: 3px 0px;
}
.btn{
  display: flex;
  margin-left: 15rpx;
  padding: 3rpx 15rpx;
  line-height: 150%;
  text-align: center;
}
/**搜索结果框**/
.section_show{
  padding: 0rpx 15rpx;
  margin:150rpx 0rpx 100rpx 0rpx;
}
.items{
  border-radius: 10rpx;
  background: #fff;
  margin:0rpx 0rpx 30rpx 0rpx;
}
.pad{
  padding: 20rpx 15rpx;
}
.top{
  padding: 20rpx 15rpx;
  border-bottom: 1rpx dashed #d0d0d0;
  display: flex;flex-direction:row;
  align-items : center;/**（居中对齐）**/
}
.detail{

}
.mid{
  margin: 5rpx 0rpx 15rpx 0rpx;
}
.mid image,.mid .icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align:middle;
  display: inline-block;
}
.tel{
  /**官方文档写明了本地资源无法通过 WXSS 获取，但是可以用网络图片，或者 base64**/
  background-image: url('/pages/images/tel.png');
}
.btm{
  display: flex;
  flex-direction: row;
  justify-content : space-around;
  /**justify-content : space-between;**/
}
/**画圆点**/
.circle{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}
/**正常**/
.green{
  background-color: green;
}
/**故障**/
.red{
  background-color: red;
}
/**维护**/
.yellow{
  background-color: yellow;
}
/**在建**/
.orange{
  background-color: orange;
}
.link{
  padding: 5rpx 20rpx;
  color: #fff;
  border-radius: 10rpx;
}
.show{
  background: #e90606;
}
.edit{
background: #07cc60;
}
.map{
  background: orange;
}
